              <stddev>0.02</stddev>
            </noise>

          </camera>
          <always_on>1</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>


          <plugin name="glinting_camera" filename="libCameraGlintPlugin.so">

            <sunlight>0.0 0.0 -1.0</sunlight>

            <!-- Approximately 10-degrees -->
            <sun_angular_diameter>0.1745</sun_angular_diameter>

